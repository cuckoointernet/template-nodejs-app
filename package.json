{
  "name": "template-nodejs-app",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^18.14.0",
    "npm": "9.x"
  },
  "scripts": {
    "install": "lerna bootstrap --ignore-scripts",
    "build": "lerna run build",
    "clean": "lerna clean --yes && lerna run clean && rimraf ./cdk.out",
    "lint": "xo --fix",
    "lint:nofix": "xo",
    "test": "lerna run test --stream",
    "test:integration:dev": "lerna run test:integration:dev --stream",
    "test:integration:stage": "lerna run test:integration:stage --stream",
    "package": "lerna run package",
    "generate": "hygen",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@cuckoointernet/aws-constructs": "1.2.1",
    "@tsconfig/node18": "1.0.3",
    "@types/aws-lambda": "8.10.119",
    "@types/jest": "29.5.2",
    "@types/jest-when": "3.5.2",
    "@types/node": "18.16.18",
    "aws-cdk-lib": "2.85.0",
    "aws-sdk-client-mock": "2.1.1",
    "constructs": "10.2.57",
    "cz-conventional-changelog": "3.3.0",
    "delay": "6.0.0",
    "husky": "8.0.3",
    "hygen": "6.2.11",
    "jest": "29.5.0",
    "jest-when": "3.5.2",
    "lerna": "6.6.2",
    "lint-staged": "13.2.2",
    "mocked-env": "1.3.5",
    "rimraf": "5.0.1",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3",
    "wait-for-expect": "3.0.2",
    "xo": "0.49.0"
  },
  "xo": {
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "unicorn/prefer-node-protocol": "off",
      "import/extensions": "off",
      "@typescript-eslint/naming-convention": "off"
    },
    "overrides": [
      {
        "files": [
          "**/infra/**/*.ts"
        ],
        "rules": {
          "no-new": 0
        }
      }
    ],
    "space": true,
    "prettier": true,
    "parserOptions": {
      "project": "./tsconfig.xo.json"
    }
  }
}
